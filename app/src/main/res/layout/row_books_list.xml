<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mtrl_card_spacing"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Card contents. -->
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:id="@+id/container" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/book_state_icon"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:scaleType="centerInside"
                        android:layout_width="25dip"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:background="@color/blue"
                        />

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/baooks_row_padding_left"
                            android:paddingTop="@dimen/baooks_row_padding_top">

                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:scaleType="centerInside"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:layout_gravity="left"
                                android:src="@drawable/ic_book_black_24dp"/>

                            <TextView android:id="@+id/book_title"
                                android:text="Book title"
                                android:textSize="16dp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="@dimen/baooks_row_padding_left"
                                android:layout_weight="0.9"/>

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/baooks_row_padding_top"
                            android:paddingLeft="@dimen/baooks_row_padding_left">

                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:scaleType="centerInside"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:layout_gravity="left"
                                android:src="@drawable/ic_person_black_24dp" />

                            <TextView android:id="@+id/book_author"
                                android:text= "Author name"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/baooks_row_padding_left"
                                android:layout_weight="0.9"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/baooks_row_padding_left"
                            android:paddingTop="@dimen/baooks_row_padding_top">

                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:scaleType="centerInside"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:layout_gravity="left"
                                android:src="@drawable/ic_link_black_24dp" />

                            <TextView
                                android:id="@+id/book_isbnCode"
                                android:text="ISBN code"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/baooks_row_padding_left"
                                android:layout_weight="0.9"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>